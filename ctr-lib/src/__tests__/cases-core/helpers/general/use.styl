    width: 200px
    anim: {
      name: 'test'
      tl: {
        '25': {
          color: red
          use: 'true'
        }
        '55': {
          color: blue
          use: false
        }
      }
    }

    media: {
      '+lg': {
        width: 400px
        use: true
      }
      '-sm': {
        width: 40900px
        use: false
      }
    }
  })



