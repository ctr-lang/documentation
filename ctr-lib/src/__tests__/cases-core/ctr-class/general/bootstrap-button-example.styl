ctrSetClass('$btn', {
  display: inline-block
  padding: 6px 12px
  margin-bottom: 0
  font-size: 14px
  font-weight: normal
  line-height: 1.42857143
  text-align: center
  white-space: nowrap
  vertical-align: middle
  touch-action: manipulation
  cursor: pointer
  user-select: none
  background-image: none
  border: 1px solid transparent
  border-radius: 4px
  text-decoration: none
  hover: {
    color: #333
    //omit the gen of transition
    option: {
      transition: false
    }
  }
})

ctrSetClass('$btn-lg', {
  padding: 10px 16px
  font-size: 18px
  line-height: 1.3333333
  border-radius: 6px
})

ctrSetClass('$btn-primary', {
  color: #fff
  background-color: #337ab7
  border-color: #2e6da4
  hover: {
    color: #fff
    background-color: #286090
    border-color: #204d74
    //omit the gen of transition
    option: {
      transition: false
    }
  }
})


// Creates a large primary bootstrap button
.test
  ctr({
    'comp-button': {
      extend: '$btn' '$btn-lg' '$btn-primary'
    }
  })


ctr('.test', {
  'comp-button': {
    extend: '$btn' '$btn-lg' '$btn-primary'
  }
})

// Simply overrites the border-radius, easy peasy.
.test
  ctr({
    'comp-button': {
      extend: '$btn' '$btn-lg' '$btn-primary'
      border-radius: 2px
    }
  })


// Simply overrites the border-radius, easy peasy.
ctr('.test', {
  'comp-button': {
    extend: '$btn' '$btn-lg' '$btn-primary'
    border-radius: 2px
  }
})
