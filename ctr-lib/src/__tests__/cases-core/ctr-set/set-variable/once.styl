$base = {
  width: 200px
  height: '$height$'
  color: '$color$'
  top: '$top$'
}

//invalid no set vars
//since there is no set vars yet
//ctr will not check the vars thus
//it will not throw a warning and the
//val will not be $var-not-found$
//it will just be the strings above
ctr('.test-1', $base)

//set vars
ctrSetVariable({
  height: 200px
  color: red
  top: 50
})


ctr('.test-2', $base)

//set new vars but only once
ctrSetVariable({
  height: 420px
  top: 100
}, {once: true})


//color will still be inherited
ctr('.test-3', $base)


//should === .test-2
ctr('.test-4', $base)



