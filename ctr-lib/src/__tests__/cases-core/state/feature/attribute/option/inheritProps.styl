.test
  ctr({
    width: 200px
    hover: {
      on: {
        height: 400px
        font-size: 20px
        color: red
        //opts will be inherited by attribute
        option: {
          duration: 2s
          ease: 'easeInSine'
          delay: 4s
        }

        //inherit above props
        attribute: {
          key: '[data-role="test"]'
          option: {
            inheritProps: true
            duration: 100s
          }
        }
      }
      non: {
        height: 200px
        font-size: 10px
        color: blue
        //opts will be inherited by attribute
        option: {
          duration: 1s
          ease: 'easeOutSine'
          delay: 2s
        }

        //inherit above props
        attribute: {
          key: '[data-role="test"]'
          //added along with inheritProps
          width: 69px
          option: {
            inheritProps: true
            duration: 100s
          }
        }
      }
    }
  })


